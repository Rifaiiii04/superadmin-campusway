import './bootstrap';
import '../css/app.css';

import React from 'react';
import { createRoot } from 'react-dom/client';
import { createInertiaApp } from '@inertiajs/react';
import { resolvePageComponent } from 'laravel-vite-plugin/inertia-helpers';

const appName = 'Super Admin Campusway';

// Safe require untuk dependencies yang mungkin missing
if (typeof window !== 'undefined') {
    // Pastikan React Window tersedia
    if (!window.ReactWindow) {
        window.ReactWindow = {
            FixedSizeList: () => React.createElement('div', {}, 'FixedSizeList not available'),
            VariableSizeList: () => React.createElement('div', {}, 'VariableSizeList not available')
        };
    }
    
    // Pastikan route function ada
    if (!window.route) {
        window.route = (name) => `/${name}`;
    }
}

createInertiaApp({
    title: (title) => `${title} - ${appName}`,
    resolve: (name) => {
        const pages = import.meta.glob('./Pages/**/*.jsx', { eager: true });
        const page = pages[`./Pages/${name}.jsx`];
        if (!page) {
            throw new Error(`Page not found: ${name}`);
        }
        return page;
    },
    setup({ el, App, props }) {
        try {
            const root = createRoot(el);
            root.render(React.createElement(App, props));
        } catch (error) {
            console.error('Error rendering app:', error);
            el.innerHTML = '<div style="padding: 20px; color: red;">Error loading application</div>';
        }
    },
});
